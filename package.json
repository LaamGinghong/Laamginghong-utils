    "lint": "eslint -c .eslintrc.js --ext .ts"
  },
  "sideEffects": false,
  "files": [
    "lib/**/*",
    "types/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -c .commitlintrc.js -E HUSKY_GIT_PARAMS"
